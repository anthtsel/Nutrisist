# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=staging
SECRET_KEY=${STAGING_SECRET_KEY}
SERVER_NAME=staging.nutrisist.com

# Database Configuration
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@staging-db.nutrisist.com:5432/health_diet_plan_staging
MONGO_URI=mongodb+srv://username:${MONGO_PASSWORD}@your-cluster.mongodb.net/health_ml_staging?retryWrites=true&w=majority
MONGO_DB=health_ml_staging

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_DEFAULT_SENDER=${MAIL_USERNAME}

# Security Configuration
STRICT_TRANSPORT_SECURITY=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_DOMAIN=staging.nutrisist.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://staging.nutrisist.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSE_HEADERS=Content-Range,X-Total-Count
CORS_MAX_AGE=600
CORS_SUPPORTS_CREDENTIALS=true

# API Keys
GARMIN_CLIENT_ID=${STAGING_GARMIN_CLIENT_ID}
GARMIN_CLIENT_SECRET=${STAGING_GARMIN_CLIENT_SECRET}
GARMIN_REDIRECT_URI=https://staging.nutrisist.com/garmin/callback

# Session Configuration
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_DEFAULT=200/hour
RATELIMIT_STORAGE_URL=redis://staging-redis:6379/0

# ML settings
ML_MODEL_DIR=models
TRAINING_DATA_DIR=training_data
ML_BATCH_SIZE=32
ML_EPOCHS=100
ML_LEARNING_RATE=0.001
ML_WINDOW_SIZE=24
ML_STRIDE=1
ML_MIN_SAMPLES=100

# ML API settings
ML_API_RATE_LIMIT=200
ML_API_RATE_LIMIT_WINDOW=3600
API_SECRET_KEY=${STAGING_API_KEY}
API_TOKEN_EXPIRY=3600
API_TOKEN_ALGORITHM=HS256

# Logging settings
ML_LOG_LEVEL=DEBUG
ML_LOG_FILE=/var/log/nutrisist/ml-staging.log 