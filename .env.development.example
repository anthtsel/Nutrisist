# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-dev-secret-key
SERVER_NAME=localhost:5001

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/health_diet_plan_dev
MONGO_URI=mongodb+srv://username:password@your-cluster.mongodb.net/health_ml_dev?retryWrites=true&w=majority
MONGO_DB=health_ml_dev

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Security Configuration
STRICT_TRANSPORT_SECURITY=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_DOMAIN=localhost

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5001,http://127.0.0.1:5001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSE_HEADERS=Content-Range,X-Total-Count
CORS_MAX_AGE=600
CORS_SUPPORTS_CREDENTIALS=true

# API Keys
GARMIN_CLIENT_ID=your-garmin-client-id
GARMIN_CLIENT_SECRET=your-garmin-client-secret
GARMIN_REDIRECT_URI=http://localhost:5001/garmin/callback

# Session Configuration
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=memory://

# ML settings
ML_MODEL_DIR=models
TRAINING_DATA_DIR=training_data
ML_BATCH_SIZE=32
ML_EPOCHS=100
ML_LEARNING_RATE=0.001
ML_WINDOW_SIZE=24
ML_STRIDE=1
ML_MIN_SAMPLES=100

# ML API settings
ML_API_RATE_LIMIT=100
ML_API_RATE_LIMIT_WINDOW=3600
API_SECRET_KEY=your-dev-api-key
API_TOKEN_EXPIRY=3600
API_TOKEN_ALGORITHM=HS256

# Logging settings
ML_LOG_LEVEL=DEBUG
ML_LOG_FILE=ml-dev.log 