# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=${PROD_SECRET_KEY}
SERVER_NAME=nutrisist.com

# Database Configuration
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@prod-db.nutrisist.com:5432/health_diet_plan_prod
MONGO_URI=mongodb+srv://username:${MONGO_PASSWORD}@your-cluster.mongodb.net/health_ml_prod?retryWrites=true&w=majority
MONGO_DB=health_ml_prod

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_DEFAULT_SENDER=${MAIL_USERNAME}

# Security Configuration
STRICT_TRANSPORT_SECURITY=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_DOMAIN=nutrisist.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://nutrisist.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSE_HEADERS=Content-Range,X-Total-Count
CORS_MAX_AGE=600
CORS_SUPPORTS_CREDENTIALS=true

# API Keys
GARMIN_CLIENT_ID=${PROD_GARMIN_CLIENT_ID}
GARMIN_CLIENT_SECRET=${PROD_GARMIN_CLIENT_SECRET}
GARMIN_REDIRECT_URI=https://nutrisist.com/garmin/callback

# Session Configuration
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_DEFAULT=500/hour
RATELIMIT_STORAGE_URL=redis://prod-redis:6379/0

# ML settings
ML_MODEL_DIR=models
TRAINING_DATA_DIR=training_data
ML_BATCH_SIZE=32
ML_EPOCHS=100
ML_LEARNING_RATE=0.001
ML_WINDOW_SIZE=24
ML_STRIDE=1
ML_MIN_SAMPLES=100

# ML API settings
ML_API_RATE_LIMIT=500
ML_API_RATE_LIMIT_WINDOW=3600
API_SECRET_KEY=${PROD_API_KEY}
API_TOKEN_EXPIRY=3600
API_TOKEN_ALGORITHM=HS256

# Logging settings
ML_LOG_LEVEL=INFO
ML_LOG_FILE=/var/log/nutrisist/ml-prod.log 