# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this

# Database Configuration
DATABASE_URL=sqlite:///app.db
# For PostgreSQL use: postgresql://user:password@localhost:5432/dbname

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Security Configuration
STRICT_TRANSPORT_SECURITY=true
STRICT_TRANSPORT_SECURITY_MAX_AGE=31536000
STRICT_TRANSPORT_SECURITY_INCLUDE_SUBDOMAINS=true
STRICT_TRANSPORT_SECURITY_PRELOAD=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSE_HEADERS=Content-Range,X-Total-Count
CORS_MAX_AGE=600

# API Keys
GARMIN_CLIENT_ID=your-garmin-client-id
GARMIN_CLIENT_SECRET=your-garmin-client-secret
GARMIN_REDIRECT_URI=http://localhost:5001/garmin/callback

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
# Session lifetime in seconds (1 hour)
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=memory:// 